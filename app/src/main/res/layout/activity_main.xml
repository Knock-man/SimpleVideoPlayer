<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusDown="@+id/btnPlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择或播放视频"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="播放"
                android:nextFocusUp="@+id/videoView"
                android:nextFocusLeft="@+id/btnOnline"
                android:nextFocusRight="@+id/btnPause"
                android:backgroundTint="@color/btn_state_list"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="暂停"
                android:nextFocusUp="@+id/videoView"
                android:nextFocusLeft="@+id/btnPlay"
                android:nextFocusRight="@+id/btnStop"
                android:backgroundTint="@color/btn_state_list"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="停止"
                android:nextFocusUp="@+id/videoView"
                android:nextFocusLeft="@+id/btnPause"
                android:nextFocusRight="@id/btnSelect"
                android:backgroundTint="@color/btn_state_list"/>

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="本地"
                android:nextFocusUp="@+id/videoView"
                android:nextFocusLeft="@+id/btnStop"
                android:nextFocusRight="@+id/btnOnline"
                android:backgroundTint="@color/btn_state_list"/>

            <Button
                android:id="@+id/btnOnline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="在线"
                android:nextFocusUp="@+id/btnPause"
                android:nextFocusLeft="@+id/btnSelect"
                android:nextFocusRight="@+id/btnPlay"
                android:backgroundTint="@color/btn_state_list"/>

        </LinearLayout>
    </LinearLayout>

    <!-- 用于显示手势操作信息的文本框 -->
    <TextView
        android:id="@+id/tvGestureInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#CC000000"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:visibility="gone" />

</RelativeLayout>
